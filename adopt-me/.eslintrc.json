{
    "extends": [
        "eslint:recommended",
        "plugin : import/errors",
        "plugin : react/recommended",
        "plugin : jsx-a11y/recommended",
        "plugin : hooks/recommended",
        // prettier must be the last one
        "prettier"
    ],
    "rules" : {
        "react/props-types": 0,
        "react/react-in-jsx-scope": 0
    },
    "plugins": [
        "import",
        "react",
        "jsx-a11y",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2022,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "settings": {
        "react": {
            "version": "detect"
        },
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx"]
            }
        }
    }
}